  width: auto;
  height: 67rpx;
  line-height: 67rpx;
  font-size: 0;
  overflow: hidden;
}

.comments .reply-user {
  float: left;
  width: auto;
  height: 67rpx;
  line-height: 67rpx;
  font-size: 0;
  margin-left: 50rpx;
  overflow: hidden;
}

.comments .reply-user text {
  display: inline-block;
  width: auto;
  height: 66rpx;
  overflow: hidden;
  font-size: 29rpx;
  line-height: 66rpx;
  font-weight: bold;
}

.navimg {
  float: left;
  width: 67rpx;
  height: 67rpx;
  margin-right: 17rpx;
  border-radius: 50%;
